{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <h1>Indice de Paises</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pais</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.nombre }}</td>
                <td>
                    <a href="{{ path('app_country_controllerv2_show', {'id': country.id}) }}">Mostrar</a>
                    <a href="{{ path('app_country_controllerv2_edit', {'id': country.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_country_controllerv2_new') }}">Create new</a>
{% endblock %}
