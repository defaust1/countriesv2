{% extends 'base.html.twig' %}


{% block title %}Editar País{% endblock %}

{% block body %}
<html>
<head>
    <title>Edicion de Países</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
    <h1>Editar País</h1>

    {{ form_start(form) }}
        {{ form_row(form.NombreComun) }}<br>
        {{ form_row(form.NombreOficial) }}<br>
        {{ form_row(form.Capital) }}<br>
        {{ form_row(form.CodigoIso) }}<br>
        {{ form_row(form.Region) }}<br>
        {{ form_row(form.Subregion) }}<br>
        {{ form_row(form.Poblacion) }}<br>
        {{ form_row(form.Area) }}<br>
        <div class="form-check">
            <input type="checkbox" id="activo" name="activo" class="form-check-input">
            <label for="activo" class="form-check-label">No actualizar</label>
        </div><br>
        <div class="d-flex gap-2">
            {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            <a href="{{ path('countries_list') }}" class="btn btn-secondary">Volver al listado</a>
        </div>
    {{ form_end(form) }}

    
    </div>
</body>
{% endblock %}